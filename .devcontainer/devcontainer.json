{
	"name": "Family Task Hub",
	"dockerComposeFile": "docker-compose.dev.yml",
	"service": "devcontainer",
	"workspaceFolder": "/workspaces/family-task-hub",
	"features": {
		"ghcr.io/jsburckhardt/devcontainer-features/uv:1": {},
		"ghcr.io/devcontainers-extra/features/bun:1": {},
		"ghcr.io/devcontainers/features/node:1": {
			"version": "20"
		},
		"ghcr.io/devcontainers/features/git:1": {}
	},
	"postCreateCommand": "bash .devcontainer/setup.sh",
	"customizations": {
		"vscode": {
			"extensions": [
				"astral-sh.ty@prerelease",
				"charliermarsh.ruff",
				"redhat.vscode-yaml",
				"shardulm94.trailing-spaces",
				"tamasfe.even-better-toml",
				"vscode-icons-team.vscode-icons",
				"waderyan.gitblame",
				"editorconfig.editorconfig",

				"oven.bun-vscode",
				"bradlc.vscode-tailwindcss",
				"dsznajder.es7-react-js-snippets",
				"editorconfig.editorconfig",
				"biomejs.biome"
			],
			"settings": {
				"workbench.iconTheme": "vscode-icons",

				"python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/bin/python",
				"[python]": {
					"editor.formatOnSave": true,
					"editor.codeActionsOnSave": {
						"source.fixAll": "explicit",
						"source.organizeImports": "explicit"
					},
					"editor.defaultFormatter": "charliermarsh.ruff",
					"editor.inlayHints.enabled": "offUnlessPressed"
				},
				"python.analysis.autoSearchPaths": true,
				"python.analysis.diagnosticSeverityOverrides": {
					"reportMissingImports": "none"
				},
				"python.analysis.extraPaths": ["${workspaceFolder}/backend/src"],
				"python.analysis.typeCheckingMode": "off",
				"python.languageServer": "None",

				"python.envFile": "${workspaceFolder}/.env",
				"python.terminal.activateEnvironment": true,

				"python.testing.pytestEnabled": true,
				"python.testing.unittestEnabled": false,
				"python.testing.cwd": "${workspaceFolder}/tests",
				"python.testing.pytestPath": "${workspaceFolder}/backend/.venv/bin/pytest",
				"python.testing.autoTestDiscoverOnSaveEnabled": true,

				"typescript.suggest.autoImports": true,
				"typescript.tsdk": "${workspaceFolder}/frontend/node_modules/typescript/lib",
				"files.associations": {
					"*.ts": "typescript",
					"*.tsx": "typescriptreact"
				},
				"biome.lsp.bin": "/workspaces/family-task-hub/frontend/node_modules/.bin/biome",
				"[typescript]": {
					"editor.defaultFormatter": "biomehq.biome-vscode",
					"editor.formatOnSave": true
				},
				"[typescriptreact]": {
					"editor.defaultFormatter": "biomehq.biome-vscode",
					"editor.formatOnSave": true
				},
				"[json]": {
					"editor.defaultFormatter": "biomehq.biome-vscode",
					"editor.formatOnSave": true
				},
				"[jsonc]": {
					"editor.defaultFormatter": "biomehq.biome-vscode",
					"editor.formatOnSave": true
				}
			}
		}
	}
}
