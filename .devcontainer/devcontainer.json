{
  "name": "Family Task Hub",
  "dockerComposeFile": "docker-compose.dev.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspaces/family-task-hub",
  "features": {
    "ghcr.io/jsburckhardt/devcontainer-features/uv:1": {},
    "ghcr.io/devcontainers-extra/features/bun:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers-community/npm-features/prettier:1": {}
  },
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "forwardPorts": [8000, 5173],
  "portsAttributes": {
    "8000": {
        "label": "Backend",
        "onAutoForward": "openBrowser"
      },
    "5173": {
      "label": "Frontend",
      "onAutoForward": "openBrowser"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "astral-sh.ty@prerelease",
        "charliermarsh.ruff",
        "redhat.vscode-yaml",
        "shardulm94.trailing-spaces",
        "tamasfe.even-better-toml",
        "vscode-icons-team.vscode-icons",
        "waderyan.gitblame",
        "editorconfig.editorconfig",

        "oven.bun-vscode",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "dsznajder.es7-react-js-snippets",
        "editorconfig.editorconfig"
      ],
      "settings": {
        "workbench.iconTheme": "vscode-icons",

        "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/bin/python",
        "[python]": {
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
          },
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.inlayHints.enabled": "offUnlessPressed"
        },
        "python.analysis.autoSearchPaths": true,
        "python.analysis.diagnosticSeverityOverrides": {
          "reportMissingImports": "none"
        },
        "python.analysis.extraPaths": ["${workspaceFolder}/backend/src"],
        "python.analysis.typeCheckingMode": "off",
        "python.languageServer": "None",

        "python.envFile": "${workspaceFolder}/.env",
        "python.terminal.activateEnvironment": true,

        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,
        "python.testing.cwd": "${workspaceFolder}/tests",
        "python.testing.pytestPath": "${workspaceFolder}/backend/.venv/bin/pytest",
        "python.testing.autoTestDiscoverOnSaveEnabled": true,

        "typescript.suggest.autoImports": true,
        "typescript.tsdk": "${workspaceFolder}/frontend/node_modules/typescript/lib",
        "files.associations": {
          "*.ts": "typescript",
          "*.tsx": "typescriptreact"
        },

        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit",
          "source.fixAll.eslint": "explicit"
        },
        "prettier.requireConfig": true,
        "prettier.configPath": ".prettierrc",
        "tasks": {
          "version": "2.0.0",
          "tasks": [
            {
              "label": "frontend: dev",
              "type": "shell",
              "command": "bun run dev",
              "options": {
                "cwd": "${workspaceFolder}/frontend"
              },
              "isBackground": true,
              "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "frontend"
              },
              "problemMatcher": []
            },
            {
              "label": "backend: dev",
              "type": "shell",
              "command": "uv run uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
              "options": {
                "cwd": "${workspaceFolder}/backend"
              },
              "isBackground": true,
              "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "backend"
              },
              "problemMatcher": []
            },
            {
              "label": "dev: all",
              "dependsOn": ["frontend: dev", "backend: dev"],
              "dependsOrder": "parallel"
            }
          ]
        }
      }
    }
  }
}
